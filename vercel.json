{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/index.py": {
      "maxDuration": 30,
      "includeFiles": ["templates/**", "static/**"]
    }
  },
  "rewrites": [
    { "source": "/static/(.*)", "destination": "/api/index.py" },
    { "source": "/chat", "destination": "/api/index.py" },
    { "source": "/", "destination": "/api/index.py" }
  ]
}
